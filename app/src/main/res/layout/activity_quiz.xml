<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bgElement"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="5sp">

        <ImageButton
            android:id="@+id/restart_button"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginRight="5sp"
            android:src="@drawable/ic_restart_quiz"
            android:background="@drawable/rounded_button"/>

        <ImageButton
            android:id="@+id/cheat_button"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/ic_cheat_button"
            android:background="@drawable/rounded_button"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <TextView
            android:id="@+id/count_hints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5sp"
            tools:hint="Count hitns"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/main_question_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/current_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Current Question"

            android:layout_gravity="center_vertical|center_horizontal"/>

        <TextView
            android:id="@+id/question_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            tools:text="Question Text"
            android:textSize="20sp"
            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:layout_gravity="center_vertical|center_horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/true_answers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="True Answers"
            android:layout_gravity="center_vertical|center_horizontal"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:layout_marginBottom="5sp">

            <Button
                android:id="@+id/true_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/true_button"
                android:background="@drawable/rounded_button"
                android:layout_margin="5sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorWhite"/>

            <Button
                android:id="@+id/false_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/false_button"
                android:layout_marginRight="@+id/true_button"
                android:background="@drawable/rounded_button"
                android:layout_margin="5sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>